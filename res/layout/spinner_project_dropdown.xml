<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/projectDropdownId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/projectDropdownName"
        android:layout_alignBottom="@+id/projectDropdownName"
        android:layout_alignParentLeft="true"
        android:text="@string/defaultInt"
        android:visibility="invisible" />

    <CheckedTextView
        android:id="@+id/projectDropdownName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/projectDropdownId"
        android:text="@string/defaultText" />

</RelativeLayout>